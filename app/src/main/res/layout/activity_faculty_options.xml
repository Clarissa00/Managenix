<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".faculty_options">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar15"
        app:menu="@menu/menu_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/FOPLACEMENT"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="17dp"
        android:text="@string/Placementcell"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/purple_gradient_button"
        app:layout_constraintBottom_toTopOf="@+id/FOFEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FODEPT"
        tools:ignore="DuplicateIds,MissingConstraints,UnknownId" />

    <Button
        android:id="@+id/FODEPT"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="17dp"
        android:text="@string/Department"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/purple_gradient_button"
        app:layout_constraintBottom_toTopOf="@+id/FOPLACEMENT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/FOFEE"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="448dp"
        android:text="fee management"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/purple_gradient_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FOPLACEMENT"
        tools:ignore="DuplicateIds,MissingConstraints,UnknownId" />

</androidx.constraintlayout.widget.ConstraintLayout>